/*
  Possible Animations:
  enter
  leave
  appear Must set transitionAppear={true} on animation component 
*/

.upcomingtrips-enter
  transition .5s
  transform translateX(-120%)
  max-height 0
  padding: 0 !important
  &.upcomingtrips-enter-active
    transform translateX(0)
    max-height 60px
    padding 2rem 0 !important
    
.upcomingtrips-leave
  transition all .5s
  transform translateX(0)
  &.upcomingtrips-leave-active
    max-height 0
    padding 0
    transform translateX(120%)
    

/* Count Animation */

.count-enter
  transition all 0.25s
  transform translateY(100%)
  &.count-enter-active
    transform translateY(0)

.count-leave
  transition all 0.25s
  position absolute
  left 0
  bottom 0
  transform translateY(0)
  &.count-leave-active
    transform translateY(-100%)